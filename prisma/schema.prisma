// Nexus Platform - Complete Prisma Schema
// Integrates: Jira + Miro + Notion + Slack + Trello

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// CORE - Authentication & Users
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed with bcrypt
  avatar        String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts              Account[]
  sessions              Session[]
  ownedWorkspaces       Workspace[]         @relation("WorkspaceOwner")
  workspaceMembers      WorkspaceMember[]
  createdProjects       Project[]           @relation("ProjectCreator")
  projectMembers        ProjectMember[]
  assignedIssues        Issue[]             @relation("IssueAssignee")
  reportedIssues        Issue[]             @relation("IssueReporter")
  assignedCards         CardAssignee[]
  createdCanvases       Canvas[]
  createdDocuments      Document[]
  channelMemberships    ChannelMember[]
  sentMessages          Message[]
  reactions             Reaction[]
  conversationsInitiated Conversation[]     @relation("ConversationInitiator")
  conversationsReceived  Conversation[]     @relation("ConversationReceiver")
  uploadedAttachments   Attachment[]
  comments              Comment[]
  activityLogs          ActivityLog[]
  notifications         Notification[]
  boardFavorites        BoardFavorite[]

  @@index([email])
  @@map("users")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// CORE - Workspaces & Members
// ============================================

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  imageUrl    String?
  inviteCode  String   @unique @default(cuid())
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner             User              @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Relations
  members           WorkspaceMember[]
  projects          Project[]
  issues            Issue[]
  boards            Board[]
  canvases          Canvas[]
  documents         Document[]
  channels          Channel[]
  conversations     Conversation[]
  messages          Message[]
  reactions         Reaction[]
  attachments       Attachment[]
  activityLogs      ActivityLog[]

  @@index([ownerId])
  @@index([slug])
  @@map("workspaces")
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  GUEST
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole @default(MEMBER)
  joinedAt    DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@map("workspace_members")
}

// ============================================
// JIRA - Project Management
// ============================================

model Project {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  key         String   // e.g., "PROJ" for issue keys like PROJ-123
  description String?
  imageUrl    String?
  color       String?
  isPrivate   Boolean  @default(false) // Private projects are only visible to members
  isDefault   Boolean  @default(false) // Each workspace has one default project
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy User      @relation("ProjectCreator", fields: [createdById], references: [id])
  
  issues     Issue[]
  sprints    Sprint[]
  boards     Board[]      // Link to Trello-style boards
  documents  Document[]   // Link to Notion-style documents
  canvases   Canvas[]     // Link to Miro-style whiteboards
  channels   Channel[]     // Project-specific message channels
  members    ProjectMember[] // Project access control

  @@unique([workspaceId, key])
  @@index([workspaceId])
  @@index([createdById])
  @@index([isDefault])
  @@map("projects")
}

// Project member access control
model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@map("project_members")
}

enum ProjectRole {
  ADMIN
  MEMBER
  VIEWER
}

enum IssueStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum IssueType {
  TASK
  BUG
  FEATURE
  EPIC
  STORY
}

model Issue {
  id          String        @id @default(cuid())
  workspaceId String
  projectId   String
  title       String
  description String?       @db.Text
  status      IssueStatus   @default(BACKLOG)
  priority    IssuePriority @default(MEDIUM)
  type        IssueType     @default(TASK)
  assigneeId  String?
  reporterId  String
  sprintId    String?
  dueDate     DateTime?
  position    Int           // For ordering
  labels      String[]      // Array of labels
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee  User?     @relation("IssueAssignee", fields: [assigneeId], references: [id])
  reporter  User      @relation("IssueReporter", fields: [reporterId], references: [id])
  sprint    Sprint?   @relation(fields: [sprintId], references: [id])
  
  comments  Comment[]
  attachments Attachment[]

  @@index([workspaceId])
  @@index([projectId])
  @@index([assigneeId])
  @@index([reporterId])
  @@index([sprintId])
  @@index([status])
  @@map("issues")
}

enum SprintStatus {
  PLANNING
  ACTIVE
  COMPLETED
}

model Sprint {
  id        String       @id @default(cuid())
  projectId String
  name      String
  goal      String?      @db.Text
  startDate DateTime
  endDate   DateTime
  status    SprintStatus @default(PLANNING)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  Issue[]

  @@index([projectId])
  @@index([status])
  @@map("sprints")
}

// ============================================
// TRELLO - Task Boards
// ============================================

model Board {
  id              String   @id @default(cuid())
  workspaceId     String
  projectId       String   // Required - belongs to a project
  title           String
  description     String?
  backgroundImage String?
  backgroundColor String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  lists     List[]
  favorites BoardFavorite[]

  @@index([workspaceId])
  @@index([projectId])
  @@map("boards")
}

model BoardFavorite {
  id      String @id @default(cuid())
  boardId String
  userId  String

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([boardId, userId])
  @@index([userId])
  @@map("board_favorites")
}

model List {
  id        String   @id @default(cuid())
  boardId   String
  title     String
  position  Int      // For ordering
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards Card[]

  @@index([boardId])
  @@index([position])
  @@map("lists")
}

model Card {
  id          String    @id @default(cuid())
  listId      String
  title       String
  description String?   @db.Text
  position    Int       // For ordering
  dueDate     DateTime?
  labels      String[]  // Array of labels
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  list        List           @relation(fields: [listId], references: [id], onDelete: Cascade)
  assignees   CardAssignee[]
  comments    Comment[]
  attachments Attachment[]

  @@index([listId])
  @@index([position])
  @@map("cards")
}

model CardAssignee {
  id     String @id @default(cuid())
  cardId String
  userId String

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([cardId, userId])
  @@index([userId])
  @@map("card_assignees")
}

// ============================================
// MIRO - Whiteboard & Canvas
// ============================================

model Canvas {
  id           String   @id @default(cuid())
  workspaceId  String
  projectId    String   // Required - belongs to a project
  title        String
  thumbnailUrl String?
  createdById  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project   Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy User           @relation(fields: [createdById], references: [id])
  layers    CanvasLayer[]
  
  @@index([workspaceId])
  @@index([projectId])
  @@index([createdById])
  @@map("canvases")
}

enum LayerType {
  RECTANGLE
  ELLIPSE
  PATH
  TEXT
  NOTE
}

model CanvasLayer {
  id       String    @id @default(cuid())
  canvasId String
  type     LayerType
  x        Float
  y        Float
  width    Float
  height   Float
  zIndex   Int
  data     Json      // Layer-specific data (color, text, points, etc.)

  canvas Canvas @relation(fields: [canvasId], references: [id], onDelete: Cascade)

  @@index([canvasId])
  @@index([zIndex])
  @@map("canvas_layers")
}

// ============================================
// NOTION - Documentation
// ============================================

model Document {
  id          String   @id @default(cuid())
  workspaceId String
  projectId   String   // Required - belongs to a project
  title       String?
  icon        String?  // Emoji
  coverImage  String?
  content     Json?    // BlockNote or rich text JSON
  parentId    String?  // For nested hierarchy
  isPublished Boolean  @default(false)
  isArchived  Boolean  @default(false)
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace    Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy    User       @relation(fields: [createdById], references: [id])
  parent       Document?  @relation("DocumentHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children     Document[] @relation("DocumentHierarchy")
  
  comments     Comment[]
  attachments  Attachment[]

  @@index([workspaceId])
  @@index([projectId])
  @@index([createdById])
  @@index([parentId])
  @@index([isPublished])
  @@index([isArchived])
  @@map("documents")
}

// ============================================
// SLACK - Team Communication
// ============================================

model Channel {
  id          String   @id @default(cuid())
  workspaceId String
  projectId   String?  // Optional - channels can be project-specific
  name        String
  description String?
  isPrivate   Boolean  @default(false)
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project   Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  members   ChannelMember[]
  messages  Message[]

  @@unique([workspaceId, name])
  @@index([workspaceId])
  @@index([projectId])
  @@map("channels")
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  userId    String
  joinedAt  DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([userId])
  @@map("channel_members")
}

model Conversation {
  id            String   @id @default(cuid())
  workspaceId   String
  memberOneId   String
  memberTwoId   String
  createdAt     DateTime @default(now())

  workspace  Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  memberOne  User      @relation("ConversationInitiator", fields: [memberOneId], references: [id], onDelete: Cascade)
  memberTwo  User      @relation("ConversationReceiver", fields: [memberTwoId], references: [id], onDelete: Cascade)
  messages   Message[]

  @@unique([workspaceId, memberOneId, memberTwoId])
  @@index([workspaceId])
  @@index([memberOneId])
  @@index([memberTwoId])
  @@map("conversations")
}

model Message {
  id             String   @id @default(cuid())
  workspaceId    String
  channelId      String?
  conversationId String?
  parentId       String?  // For threading
  body           String   @db.Text
  senderId       String
  isEdited       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  workspace    Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  channel      Channel?      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  conversation Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User          @relation(fields: [senderId], references: [id], onDelete: Cascade)
  parent       Message?      @relation("MessageThread", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies      Message[]     @relation("MessageThread")
  
  reactions    Reaction[]
  attachments  Attachment[]

  @@index([workspaceId])
  @@index([channelId])
  @@index([conversationId])
  @@index([senderId])
  @@index([parentId])
  @@index([createdAt])
  @@map("messages")
}

model Reaction {
  id          String   @id @default(cuid())
  workspaceId String
  messageId   String
  userId      String
  emoji       String
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  message   Message   @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@index([workspaceId])
  @@index([messageId])
  @@index([userId])
  @@map("reactions")
}

// ============================================
// SHARED - Common Models
// ============================================

model Attachment {
  id           String   @id @default(cuid())
  workspaceId  String
  url          String
  filename     String
  fileSize     Int
  mimeType     String
  uploadedById String
  
  // Polymorphic relations
  issueId      String?
  cardId       String?
  documentId   String?
  messageId    String?
  
  createdAt    DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  uploadedBy User     @relation(fields: [uploadedById], references: [id])
  issue      Issue?   @relation(fields: [issueId], references: [id], onDelete: Cascade)
  card       Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  document   Document? @relation(fields: [documentId], references: [id], onDelete: Cascade)
  message    Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([uploadedById])
  @@index([issueId])
  @@index([cardId])
  @@index([documentId])
  @@index([messageId])
  @@map("attachments")
}

model Comment {
  id         String   @id @default(cuid())
  content    String   @db.Text
  authorId   String
  
  // Polymorphic relations - only one will be set
  issueId    String?
  cardId     String?
  documentId String?
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  issue      Issue?    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  card       Card?     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  document   Document? @relation(fields: [documentId], references: [id], onDelete: Cascade)
  author     User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@index([cardId])
  @@index([documentId])
  @@index([authorId])
  @@map("comments")
}

model ActivityLog {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  action      String   // e.g., "CREATED", "UPDATED", "DELETED"
  entityType  String   // e.g., "ISSUE", "CARD", "MESSAGE"
  entityId    String
  metadata    Json?    // Additional context
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
  @@map("activity_logs")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String   @db.Text
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}
